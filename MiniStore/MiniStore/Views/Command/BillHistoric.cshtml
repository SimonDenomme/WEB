@model MiniStore.ViewModels.Command.BillViewModel

<h1>Details</h1>

<div>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.CommandId)
		</dt>
		<dd class="col-sm-10">
            @Html.DisplayFor(model => model.CommandId)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.CommandStatus)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.CommandStatus)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Name)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Name)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Phone)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Phone)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Address)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Address)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.CreditCard)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.CreditCard)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Date)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Date)
		</dd>
	</dl>
	<h3>@Html.DisplayNameFor(model => model.Items)</h3>
	<div>
		<div class="cart-body-command">
			<div class="shopping-cart">
				<!-- Title -->
				<div class="title">
					Panier d'achats
				</div>

				@foreach (var item in Model.Items.ItemsInCart)
				{
					<div class="item">
						<div class="image">
							<img src="/img/@item.ImagePath" alt="" />
						</div>

						<div class="description">
							<span>@item.Name</span>
						</div>

						<div class="quantity">
							<ul class="list-inline pb-3">
								<li class="list-inline-item text-right">
									<input type="hidden" name="Quantity" id="product-quanity" value="@item.Quantity">
								</li>
								<li class="list-inline-item"><span class="badge bg-secondary" id="var-value">@item.Quantity</span></li>
							</ul>
						</div>

						<div class="price">$@item.Price</div>
					</div>
				}
			</div>
		</div>
	</div>
</div>
<div>
	<a asp-action="List" class="btn btn-success btn-lg px-3"> Retour </a>
</div>
